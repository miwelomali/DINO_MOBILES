<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Número de Control:"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="186dp"
            android:layout_height="178dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/eng3" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="131dp"
            android:layout_height="178dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/eng2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/eng1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtVwPuntos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Puntos para acreditar:"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/skBarPuntos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtVwCalif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calificación:"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/skBarCalif"
            android:layout_width="match_parent"

            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtVwAcredita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="36sp" />

    </LinearLayout>

</LinearLayout>